#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen
	BusTimingScreen

<MainScreen>:
	name: "main"
	GridLayout:
		cols: 1
		rows: 2
		Button:
			text: 'Bus Info'
			on_press:
				self.text= root.do_someaction()
			on_release:
				app.root.current = "bus1"
				self.text = "Bus Info" #Resets the text back to default


<BusTimingScreen>:
	name: "bus1"
	FloatLayout:
		Label:
			text: 'Next Bus'
			size_hint: (0.5, 0.2)
			pos_hint: {"left":1,"top":1}
		Label: 
			text: 'Arriving in:'
			size_hint: (0.5, 0.2)
			pos_hint: {"left":1, "top":0.8}
		Label:
			text: 'Subsequent Bus'
			size_hint: (0.5, 0.2)
			pos_hint: {"right":1, "top":1}
		Label:
			text: 'Arriving in:'
			size_hint: (0.5, 0.2)
			pos_hint: {"right":1, "top":0.8}
		Button:
			text: 'Test Button'
			size_hint: (0.3, 0.3)
			pos_hint: {"right":1, "bottom":1}
			on_press: root.getTime()


